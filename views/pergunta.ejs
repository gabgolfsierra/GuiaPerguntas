
<%- include ('partials/header.ejs') %>

<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <br>
        <form method="POST" action="/responder">
            <br>
            <textarea placeholder="Digite sua resposta" class="form-control mt-2" name= "corpo" required></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% if ( respostas.corpo !== null) { %>
            <% respostas.forEach(resposta => {%>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo %></p>
                   </div>
                </div>
            <% }) %>
        <% } %>
            
    </div>
</body>
<%- include ('partials/footer.ejs') %>